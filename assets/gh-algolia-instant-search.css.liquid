.ais-page .ais-Hits-list{
    display: flex;
    flex-wrap: wrap;
}

.ais-page .ais-Hits-item{
    padding: 10px;
    width: calc( 100% / 3 );
}

.ais-page .ais-hit-gh{
    cursor: pointer;
    border: 2px solid #eee;
    border-radius: 5px;
    padding: 20px 10px;
    height: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
}

.ais-page .ais-hit-gh--picture{
    text-align: center;
    padding-bottom: 20px;
}

.ais-page .ais-hit-gh--picture{

}

.ais-page .ais-hit-gh--picture img{
    width: 150px;
}

.ais-page .ais-hit-gh--title{

}

.ais-page .ais-hit-gh--title a{
    color: var(--gh-color-green-dark);
    font-weight: 700;
}

.ais-page .ais-hit-gh--subtitle{

}

.ais-page .ais-hit-gh--price{

}

.ais-hit-gh--details{
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

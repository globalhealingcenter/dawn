.ais-results-size-lg{

}

.ais-results-size-lg .ais-page{
    max-width: 100%;
    margin:0;
}

.ais-page .ais-page--header{
    background: #fff;
    padding: 3rem 1rem;
}

.ais-page .ais-page--body{
    max-width: 1430px;
    margin: 30px auto 10px;
    padding: 0 15px;
    display: flex;
    gap: 22px;
}

.ais-page .ais--facets-container{
    width: 25%;
    background: #fff;
    padding: 1px 17px;
}

.ais-page .ais--results-container{
    flex: 1;
    background: #fff;
    padding: 0 17px 20px 17px;
}

.ais-page .ais--results-container .ais-block{
    padding-left: 0;
}


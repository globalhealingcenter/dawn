.ais-page .ais-change-display{
  display: none;
}

.ais-facets .ais-facet-dropdown-wrapper{
  border-bottom: 1px solid #eee;
}

.ais-page .ais-facets .ais-RefinementList-item{
  
}

.ais-page .ais-facets .ais-RefinementList-item--selected, 
.ais-page .ais-facets .ais-facet--item:hover{
  border-left: 0;
  margin-left: 0;
  padding-left: inherit;
  padding-right: inherit;
  color: #000;
}

.ais-facets .ais-facet--item:hover .ais-facet--label{
  width: auto;
  text-decoration: underline;
}

.ais-facets .ais-RefinementList-item--selected:hover .ais-facet--label{
  text-decoration: line-through;
}


#MainContent > .shopify-section:first-child > .page-width{
  max-width: 100%;
  padding: 0 0;
}

.ais-page .ais-page--header{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10px;
  padding: 2.5rem 1rem 4rem 1rem;
  background: #fff;
}

.ais-page .ais-page--header h1{
  font-size: 30px;
  margin-bottom: 6px;
  text-transform: capitalize;
}

.ais-page .ais-page--header > div:last-child{
  width: 600px;
}

.ais-page .ais-page--header .ais-input{
  border-color: var(--gh-color-green);
  margin-top: 0;
  margin-bottom: 0;
  max-width: 100%;
}

.ais-page .ais-page--header .ais-SearchBox-input{
  color: var(--gh-color-green-dark);
  font-family: var(--gh-font-primary);
  font-size: 21px;
  background: transparent;
}

.ais-page .ais-page--header .ais-SearchBox-submitIcon{
  fill:  var(--gh-color-green);
}

.ais-results-size-lg .ais-page{
    max-width: 100%;
    margin:0;
    padding: 0;
}

.ais-page .ais-page--body{
  max-width: var(--page-width);
    margin: 30px auto;
    padding: 0 1.5rem;
    display: flex;
    gap: 22px;
}

.ais-page .ais--facets-container{
    width: 25%;
    background: #fff;
    padding: 17px;
}

.ais--facets-container .gh-ais-section-header{
  font-size: 2.4rem;
  border-bottom: 1px solid var(--gh-color-green-dark);
  padding: 1rem 0 1.5rem 0;
  margin-bottom: 3rem;
}

.ais--results-container .gh-ais-section-header{
  border-bottom: 1px solid var(--gh-color-green-dark);
  padding: 1rem 0 1rem 1rem;
}

.ais-page .ais-facets .ais-facet--header{
    background: transparent;
    font-family: 'Proxima Nova';
    text-transform: uppercase;
    color: var(--gh-color-green);
    font-weight: 500;
    font-size: 1.8rem;
}

.ais-page .ais--results-container{
    flex: 1;
    background: #fff;
    padding: 0 17px 20px 17px;
}

.ais-page .ais--results-container .ais-block{
    padding-left: 0;
}

.ais-results-size-lg .ais-page .ais-facets{
    background: #fff;
    width: 100%;
  float: none;
}

.ais-results-size-lg .ais-page .ais-block{
    background: #fff;
    width: 100%;
    float: none;
}

.ais-page .ais-Hits-list{
    display: flex;
    flex-wrap: wrap;
    padding-left: 0;
}

.ais-page .ais-Hits-item{
    padding: 10px;
    width: calc( 100% / 3 );
}

.ais-page .ais-hit-gh{
    cursor: pointer;
    border: 2px solid #eee;
    border-radius: 5px;
    padding: 20px 10px;
    height: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    transition: .3s ease-in-out border-color, .3s ease-in-out box-shadow, background-position ease-in-out .15s;
}

.ais-page .ais-hit-gh:hover{
  border-color: var(--gh-color-green-dark);
  box-shadow: var(--gh-color-green-light) 0 0 12px;
}

.ais-page .ais-hit-gh--picture{
    text-align: center;
    padding-bottom: 20px;
}

.ais-page .ais-hit-gh--picture{

}

.ais-page .ais-hit-gh--picture img{
    width: 150px;
  transition: transform ease-in-out .25s;
}

.ais-page .ais-hit-gh:hover .ais-hit-gh--picture img{
  transform: scale(1.1);
}

.ais-page .ais-hit-gh--title{

}

.ais-page .ais-hit-gh--title a,
.ais-page a, .ais-page .ais-hit-gh--title a:hover{
  color: var(--gh-color-green-dark);
  font-weight: 700;
  font-size: 17px;
  text-decoration: none;
}

.ais-page a, .ais-page .ais-hit-gh--title a:hover{
  
}

.ais-page .ais-Hits-list span{
  font-size: inherit;
}

.ais-page .ais-hit-gh--title{
  line-height: 1.4;
}

.ais-page .ais-hit-gh--subtitle{
  line-height: 1.5;
}

.ais-page .ais-hit-gh--price{

}

.ais-hit-gh--details{
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

#gh-ais-hits-article .ais-hit-gh{
  padding: 0;
}

#gh-ais-hits-article .ais-hit-gh > div:first-child{
  display: block;
  height: 200px;
  background-size: cover;
  background-position: center center;
}

#gh-ais-hits-article .ais-hit-gh > .article-hit-content{
  padding: 20px 10px;
}

#gh-ais-hits-article .gh-ais-article-content{
  line-height: 1.5;
  margin-top: 7px;
}

#gh-ais-hits-article .ais-Snippet-highlighted{
  background: none;
}

span.ais-Snippet-nonHighlighted {
    opacity: .7;
}

#gh-ais-hits-article .ais-hit-gh{
    background-image: url(https://cdn.globalhealing.com/web/v2/icon/arrow-right.svg);
    background-size: 20px;
    background-repeat: no-repeat;
    background-position: 110% 98%;
}

#gh-ais-hits-article .ais-hit-gh:hover{
  background-position: 96.5% 98%;
}

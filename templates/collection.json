{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "custom_css": [
        "h1 {color: var(--gh-color-green); font-size: 6rem;}"
      ],
      "settings": {
        "show_collection_description": true,
        "show_collection_image": false,
        "color_scheme": "background-1"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        ".card__heading {font-weight: 700; color: #545454; margin-top: 10px; font-size: 16px;}",
        ".price {color: #008249; font-weight: bold; font-size: 13px;}",
        ".card--standard > .card__content {padding: 0 10px 10px 10px; border: 2px solid #eee; border-radius: 0 0 10px 10px; border-top: 0;}"
      ],
      "settings": {
        "products_per_page": 16,
        "columns_desktop": 3,
        "image_ratio": "square",
        "image_shape": "blob",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": true,
        "enable_quick_add": true,
        "enable_filtering": true,
        "filter_type": "vertical",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}

{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: calc({{ section.settings.padding_top }}px * 0.75);
        padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}

<div class="gh--home-page section-{{ section.id }}-padding">

    {{ 'gh-section-home-page.css' | asset_url | stylesheet_tag }}

    {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when '@app' -%}
            {% render block %}
        {% when 'hero' %}
            <section class="ghd--hero" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.url }}">
                <picture>
                  <source media="(min-width: 650px)" srcset="{{ block.settings.image }}">
                  <source media="(max-width: 649px)" srcset="{{ block.settings.image_mobile }}">
                  <img src="{{ block.settings.image }}" alt="">
                </picture>
              </a>
            </section>
        {% when 'logos' %}
            <section class="ghd--logos ghd--bg-white" {{ block.shopify_attributes }}>
                <div class="ghd--flex">
                    <div><img src="https://cdn.globalhealing.com/pages/v2/home/logos-miami-herald.v2.svg" data-logo="miami-herald"></div>
                    <div><img src="https://cdn.globalhealing.com/pages/v2/home/logos-forbes.v2.svg" data-logo="forbes"></div>
                    <div><img src="https://cdn.globalhealing.com/pages/v2/home/logos-chicago-tribune.v2.svg" data-logo="chicago-tribune"></div>
                    <div><img src="https://cdn.globalhealing.com/pages/v2/home/logos-huffpost.v2.svg" data-logo="huffpost"></div>
                    <div><img src="https://cdn.globalhealing.com/pages/v2/home/logos-mens-journal.v2.svg" data-logo="mens-journal"></div>
                    <div><img src="https://cdn.globalhealing.com/pages/v2/home/logos-us-weekly.v2.svg" data-logo="us-weekly"></div>
                    <div><img src="https://cdn.globalhealing.com/pages/v2/home/logos-livestrong.v2.svg" data-logo="livestrong"></div>
                </div>
            </section>
        {% when 'banners' %}
            <section class="ghd--banners ghd--bg-white" {{ block.shopify_attributes }}>
                <div class="page-width ghd--flex">
                    <div>
                        <a href='{{ block.settings.banner_1_url }}'><img src="{{ block.settings.banner_1_image }}" alt="" loading="lazy"></a>
                    </div>
                    <div class="ghd--flex" data-side="right">
                        <div><a href='{{ block.settings.banner_2_url }}'><img src="{{ block.settings.banner_2_image }}?w=500" srcset="{{ block.settings.banner_2_image }}?w=1000 2x" alt="" loading="lazy"></a></div>
                        <div><a href='{{ block.settings.banner_3_url }}'><img src="{{ block.settings.banner_3_image }}?w=500" srcset="{{ block.settings.banner_3_image }}?w=1000 2x" alt="" loading="lazy"></a></div>
                    </div>
                </div>
            </section>
        {% when 'quality' %}
            <section class="ghd--our-process" {{ block.shopify_attributes }}>
                <div class="page-width ghd--flex">
                    <div>
                        <h2>{{ block.settings.heading }}</h2>
                        <a href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
                    </div>
                    <div data-side="right">
              <span>
                  <img src="https://cdn.globalhealing.com/pages/v2/home/quality-vegan.svg" alt="">
                  Vegan-Friendly
              </span>
                        <span>
                  <img src="https://cdn.globalhealing.com/pages/v2/home/quality-gmo-free.svg" alt="">
                  GMO-Free
              </span>
                        <span>
                  <img src="https://cdn.globalhealing.com/pages/v2/home/quality-gluten-free.svg" alt="">
                  Gluten-Free
              </span>
                        <span>
                  <img src="https://cdn.globalhealing.com/pages/v2/home/quality-additive-free.svg" alt="">
                  No Additives
              </span>
                    </div>
                </div>
            </section>
        {% when 'journey' %}
            <section class="ghd--journey" {{ block.shopify_attributes }}>
                <div class="page-width">
                    <div data-type="header">
                        <h2 class="text-center">{{ block.settings.heading }}</h2>
                    </div>
                    <div class="ghd--flex" data-type="cols">
                        <div>
                            <h3>{{ block.settings.left_col_heading }}</h3>
                            {{ block.settings.left_col_text }}
                            <p><a class="button button--gold" href="{{ block.settings.link_1 }}">{{ block.settings.link_1_text }}</a></p>
                            <p><a class="button" href="{{ block.settings.link_2 }}">{{ block.settings.link_2_text }}</a></p>
                        </div>
                        <div>
                            <h4 class="text-center">{{ block.settings.link_list_heading }}</h4>
                            <div class="ghd--journey--goals ghd--flex">
                                {% for link in block.settings.link_list.links %}
                                  <div>{{ link.title | link_to: link.url }}</div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% when 'foundation' %}
            <section class="ghd--foundation" {{ block.shopify_attributes }}>

                <div class="ghd--flex">
                    <div data-type="text">
                        <h2 class="eyebrow">{{ block.settings.heading }}</h2>
                        {{ block.settings.text }}
                        <p><a class="button button--gold" href="{{ block.settings.link_1 }}">{{ block.settings.link_1_text }}</a></p>
                        <p><a class="button button--gold-outline" href="{{ block.settings.link_2 }}">{{ block.settings.link_2_text }}</a></p>
                    </div>
                    <div data-type="image">
                        <img src="https://cdn.globalhealing.com/pages/v2/home/foundation.png?w=760" srcset="https://cdn.globalhealing.com/pages/v2/home/foundation.png?w=1520 2x" alt="" loading="lazy">
                    </div>
                </div>

            </section>

        {% when 'br' %}
            <hr class="page-width" {{ block.shopify_attributes }}>

        {% when 'mission' %}
            <section class="ghd--mission" {{ block.shopify_attributes }}>
                <div class="ghd--flex page-width" data-type="header">
                    <div><h2>{{ block.settings.heading }}</h2></div>
                    <div>
                        {{ block.settings.intro_text }}
                    </div>
                </div>
                <div class="page-width ghd--flex" data-type="cols">
                    <div>
                        <img src="https://cdn.globalhealing.com/pages/v2/home/mission-natural.png?w=560" srcset="https://cdn.globalhealing.com/pages/v2/home/mission-natural.png?w=1120 2x" alt="">
                        <div>
                            <h3 class="eyebrow">
                                <span>WE BELIEVE IN</span>
                                NATURAL
                            </h3>
                            <p>We offer products backed by science and rooted in nature, using only sustainable ingredients to maximize potency and purity. </p>
                        </div>
                    </div>
                    <div>
                        <img src="https://cdn.globalhealing.com/pages/v2/home/mission-innovation.png?w=560" srcset="https://cdn.globalhealing.com/pages/v2/home/mission-innovation.png?w=1120 2x" alt="">
                        <div>
                            <h3 class="eyebrow">
                                <span>WE BELIEVE IN</span>
                                INNOVATION
                            </h3>
                            <p>In our state-of-the-art, eco-friendly facility, we develop and formulate innovative products that offer the best supplements in the industry, hands down.</p>
                        </div>
                    </div>
                    <div>
                        <img src="https://cdn.globalhealing.com/pages/v2/home/mission-sustainability.png?w=560" srcset="https://cdn.globalhealing.com/pages/v2/home/mission-sustainability.png?w=1120 2x" alt="">
                        <div>
                            <h3 class="eyebrow">
                                <span>WE BELIEVE IN</span>
                                SUSTAINABILITY
                            </h3>
                            <p>In addition to our sustainably sourced ingredients, we pack and ship our products in the most environmentally-friendly way possible to reduce our carbon footprint.</p>
                        </div>
                    </div>
                    <div>
                        <img src="https://cdn.globalhealing.com/pages/v2/home/mission-giving-back.png?w=560" srcset="https://cdn.globalhealing.com/pages/v2/home/mission-giving-back.png?w=1120 2x" alt="">
                        <div>
                            <h3 class="eyebrow">
                                <span>WE BELIEVE IN</span>
                                GIVING BACK
                            </h3>
                            <p>We give back to local and national organizations that promote sustainable, organic farming initiatives and frequently donate a portion of our sales to like-minded nonprofits.</p>
                        </div>
                    </div>
                </div>
            </section>

        {% when 'autoship' %}
            <section class="ghd--autoship-info" {{ block.shopify_attributes }}>

                <div class="page-width ghd--flex">
                    <div data-type="image">
                      <!--
                        <picture>
                          <source media="(min-width: 650px)" srcset="{{ block.settings.image }}">
                          <source media="(max-width: 649px)" srcset="{{ block.settings.image_mobile }}">
                          <img src="{{ block.settings.image }}" alt="">
                        </picture>
                      -->
                    </div>
                    <div data-type="text">
                        <h2 class="eyebrow">
                            {{ block.settings.heading }}
                        </h2>
                        {{ block.settings.text }}
                        <a class="button button--tertiary button--secondary" href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
                    </div>
                </div>

            </section>
        {% when 'reviews' %}
            <section class="ghd--reviews" {{ block.shopify_attributes }}>
                <div class="ghd--flex" data-type="cols">
                    <div class="text-center">
                        <div>
                            <img src="https://cdn.globalhealing.com/pages/v2/home/reviews-stars.svg" width="150" alt="">
                            <h3 class="eyebrow">
                                Tens of Thousands
                                <span>OF FIVE-STAR REVIEWS</span>
                            </h3>

                            <h3 class="ghd--reviews--featured-title">Featured Review</h3>
                            <div class="slider">
                                <div>
                                    {{ block.settings.review }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div data-type="image">
                        <div>
                            <div>
                                <div><img src="{{ block.settings.row_1_img }}" alt=""></div>
                                <div>{{ block.settings.row_1_text }}</div>
                            </div>
                            <div>
                                <div><img src="{{ block.settings.row_2_img }}" alt=""></div>
                                <div>{{ block.settings.row_2_text }}</div>
                            </div>
                            <div>
                                <div><img src="{{ block.settings.row_3_img }}" alt=""></div>
                                <div>{{ block.settings.row_3_text }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% endcase %}
    {% endfor %}
</div>



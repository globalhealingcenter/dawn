
<!-- [hide-shipping-method] -->
<script>
	if( document.querySelector('.os-order-number') ){
		document.querySelectorAll('.text-container .heading-3').forEach( heading => {
			if( heading.innerText.toLowerCase() !== 'shipping method' ) return;

			let sibling = heading.nextSibling;
			while( sibling ){
				if( sibling.innerText && sibling.innerText.includes('- by') ){
					let pos = sibling.innerText.indexOf('- by');
					let cleanedText = sibling.innerText.substring(0, pos);
					sibling.innerText = cleanedText
				}
				sibling = sibling.nextSibling;
			}

		})
	}
</script>
<!-- [/hide-shipping-method] -->
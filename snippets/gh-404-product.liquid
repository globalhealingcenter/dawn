<script>

let gh_404 = (() => {

    let url = new URL(window.location);
    let replace_container = document.querySelector('.template-404');

    let init = () => {

      if( !url.path.includes('products/') ) return;

      replace_container.querySelector('.title').innerHTML = 'Product not available in your market.';
      replace_container.querySelector('p:first-child').classList.add('hide')

    }

  return { init };

})();

</script>